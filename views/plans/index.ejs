<%- include ("../partials/header.ejs") %> <%- include
("../partials/homenavbar.ejs") %>

<body>
  <div class="container">
    <h2 class="mt-5">Planos Cadastrados</h2>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">List</th>
          <th scope="col">ClientID</th>
          <th scope="col">Valor</th>
          <th scope="col">Status</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% planos.forEach(plano => { %>
        <tr>
          <th scope="row"><%= plano.id %></th>
          <td><%= plano.title %></td>
          <td><%= plano.list %></td>
          <td><%= plano.client %></td>
          <td><%= plano.value %></td>
          <!--Status do plano -->
          <% if (plano.deactivated) { %>
          <td>Desativado</td>
          <% } else {%>
          <td>Ativado</td>
          <% } %>
          <!--Ativar ou desativar plano -->
          <% if (plano.deactivated) { %>
            <td>
              <a href="/plans/activate/<%= plano.id %>">
                Ativar
              </a>
            </td>
            <% } else {%>
              <td>
                <a href="/plans/deactivate/<%= plano.id %>">
                  Desativar
                </a>
              </td>
            <% } %>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <hr />
  </div>
</body>


<style>
a:link{
text-decoration:none;
color:black;
}

a:visited{
text-decoration:none;
color:red;
}

a:hover{
text-decoration:none;
color:pink;
}

a:active{
text-decoration:none;
color:green;
}

</style>

